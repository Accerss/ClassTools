{
  "appId": "ClassTools",
  "asar": false,
  "directories": {
    "output": "release"
  },
  "files": [
    "dist",
    "static"
  ],
  "mac": {
    "target": [
      "dir"
    ]
  },
  "win": {
    "icon": "build/app.ico",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true
  }
}
